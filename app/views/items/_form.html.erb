<h4>Add a To-Do List Item</h4>
<%= form_for [@user, item], remote: true  do |f| %>
  <div class="input-group">
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter a new item here", autofocus: true %>
    <span class="input-group-btn">
      <%= f.submit "Save", class: 'btn btn-success'%>
    </span>
  </div>
<% end %>
